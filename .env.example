# Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in your values

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Database Configuration
# Use environment-specific database names: app_development.db, app_production.db
DATABASE_URL=sqlite:///app.db

# Security Keys (auto-generated if not provided)
SECRET_KEY=
ENCRYPTION_KEY=

# Frontend Development Settings (dev only)
FRONTEND_DEV_PORT=5173
FRONTEND_DEV_HOST=0.0.0.0

# OpenRouter API Configuration
OPENROUTER_TIMEOUT=120
OPENROUTER_STREAM_CHUNK_SIZE=1024
OPENROUTER_MAX_CONNECTIONS_PER_SESSION=5
OPENROUTER_STREAM_TIMEOUT=300
OPENROUTER_CONNECTION_POOL_SIZE=10
OPENROUTER_MAX_RETRIES=3

# Claude Code CLI Configuration
CLAUDE_CODE_EXECUTABLE_PATH=claude
CLAUDE_CODE_TIMEOUT=120